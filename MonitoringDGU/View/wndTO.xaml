<Window x:Class="MonitoringDGU.View.wndTO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Время до ТО" Height="146.512" Width="300" ResizeMode="NoResize" Icon="/MonitoringDGU;component/Images/clock_select_remain.png" WindowStartupLocation="CenterScreen">
    <Grid>

        <Button x:Name="btnOk" Content="Ок" HorizontalAlignment="Right"  Margin="0,0,95,10" Grid.Row="2" VerticalAlignment="Bottom"  Width="75" Click="btnOk_Click" />
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Right"  Margin="0,0,10,10" Grid.Row="2" VerticalAlignment="Bottom"  Width="75" Click="btnCancel_Click" />
        <Label Content="Время до ТО (в часах):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="{Binding Time}" VerticalAlignment="Top" Width="274"/>

    </Grid>
</Window>
